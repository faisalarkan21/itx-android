<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="0dp"
    android:orientation="horizontal"
    android:padding="5dip">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout
        android:id="@+id/thumbnail_asset_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"

        android:padding="3dip">

        <ImageView
            android:id="@+id/iv_asset_inventory"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:src="@drawable/icon_tentang_03"
           />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_inventory_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_asset_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/thumbnail_asset_layout"
        android:text="Inventory Name"
        android:textColor="#040404"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/tv_inventory_facilities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/tv_inventory_name"
        android:layout_alignStart="@+id/tv_inventory_name"
        android:layout_below="@+id/tv_inventory_name"



        android:layout_marginTop="3dp"
        android:text="Facilities : Wifi, AC, Parking"
        android:textColor="#343434"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_stock_harga"
        android:layout_alignLeft="@+id/tv_inventory_facilities"
        android:layout_alignStart="@+id/tv_inventory_facilities"
        android:layout_below="@+id/tv_inventory_facilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_inventory_stock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"



            android:layout_marginTop="5dp"
            android:text="Stock"
            android:textColor="#343434"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_inventory_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="70dp"

            android:layout_weight="1"
            android:text="harga" />

    </LinearLayout>




    <!-- Rightend Arrow -->
    <TextView
        android:id="@+id/tv_inventory_space"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_stock_harga"
        android:layout_alignStart="@+id/ll_stock_harga"
        android:layout_below="@+id/ll_stock_harga"
        android:layout_marginTop="3dp"
        android:text="Space"
        android:textColor="#343434"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_invent_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="2.2dp"
        android:src="@drawable/ic_more_vert" />



</RelativeLayout>